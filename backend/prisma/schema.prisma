generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boards       BoardMember[]
  tasks        Task[]        @relation("AssignedTasks")
  comments     Comment[]
  activityLogs ActivityLog[]
}

model Board {
  id          String   @id @default(uuid())
  name        String
  description String?
  color       String   @default("bg-blue-500")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lists        List[]
  members      BoardMember[]
  activityLogs ActivityLog[]
}

model BoardMember {
  id        String   @id @default(uuid())
  role      String   @default("member") // owner, admin, member
  createdAt DateTime @default(now())

  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([userId, boardId])
}

model List {
  id        String   @id @default(uuid())
  title     String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  tasks Task[]

  @@index([boardId])
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  position    Int       @default(0)
  priority    String    @default("medium") // low, medium, high
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  listId String
  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)

  assigneeId String?
  assignee   User?   @relation("AssignedTasks", fields: [assigneeId], references: [id])

  labels       TaskLabel[]
  attachments  Attachment[]
  comments     Comment[]
  activityLogs ActivityLog[]

  @@index([listId])
  @@index([assigneeId])
}

model ActivityLog {
  id        String   @id @default(uuid())
  action    String // e.g., "moved", "created", "commented"
  entityType String // "TASK", "LIST", "BOARD"
  entityId   String
  details    String? // e.g., "Moved task from Backlog to Done"
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  
  taskId String?
  task   Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([boardId])
}

model Label {
  id    String @id @default(uuid())
  name  String @unique
  color String @default("bg-zinc-500")

  tasks TaskLabel[]
}

model TaskLabel {
  id String @id @default(uuid())

  taskId  String
  task    Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  labelId String
  label   Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([taskId, labelId])
}

model Attachment {
  id        String   @id @default(uuid())
  filename  String
  url       String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}